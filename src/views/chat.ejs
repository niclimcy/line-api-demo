<!doctype html>
<html>
  <head>
    <title>Send Message</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-gray-100">
    <div class="max-w-md mx-auto mt-8">
      <h1 class="text-2xl font-bold mb-4">Send Message</h1>

      <% if (messageSent) { %>
      <div
        class="bg-green-100 border-t-4 border-green-500 rounded-b text-green-900 px-4 py-3 shadow-md mb-4"
        role="alert"
      >
        <div class="flex">
          <div class="py-1">
            <svg
              class="fill-current h-6 w-6 text-green-500 mr-4"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
            >
              <path
                d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM6.7 9.29L9 11.6l4.3-4.3 1.4 1.42L9 14.4l-3.7-3.7 1.4-1.42z"
              />
            </svg>
          </div>
          <div>
            <p class="font-bold">Message sent successfully!</p>
            <p class="text-sm">
              Your message has been delivered to the recipient.
            </p>
          </div>
        </div>
      </div>
      <% } else if (errorMessage) { %>
      <div
        class="bg-red-100 border-t-4 border-red-500 rounded-b text-red-900 px-4 py-3 shadow-md mb-4"
        role="alert"
      >
        <div class="flex">
          <div class="py-1">
            <svg
              class="fill-current h-6 w-6 text-red-500 mr-4"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
            >
              <path
                d="M10 2a8 8 0 1 0 0 16 8 8 0 0 0 0-16zm3.36 9.64L9.64 15.36a1 1 0 0 1-1.42 0l-3.72-3.72a1 1 0 0 1 1.42-1.42L8 12.3l5.64-5.64a1 1 0 0 1 1.42 1.42z"
              />
            </svg>
          </div>
          <div>
            <p class="font-bold">Message not sent!</p>
            <p class="text-sm"><%= errorMessage %></p>
          </div>
        </div>
      </div>
      <% } %>

      <form
        method="POST"
        action="/send-message"
        class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
      >
        <div class="mb-4">
          <label for="recipient" class="block text-gray-700 font-bold mb-2"
            >Select Recipient:</label
          >
          <div class="relative">
            <select
              name="recipient"
              id="recipient"
              class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline"
              required
            >
              <option value="">--Select a user--</option>
              <% users.forEach(user => { %>
              <option value="<%= user.userId %>">
                <%= user.displayName %>
              </option>
              <% }) %>
            </select>
            <div
              class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
            >
              <svg
                class="fill-current h-4 w-4"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                />
              </svg>
            </div>
          </div>
        </div>
        <div class="mb-6">
          <label for="message" class="block text-gray-700 font-bold mb-2"
            >Message:</label
          >
          <textarea
            name="message"
            id="message"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            rows="5"
            required
          ></textarea>
        </div>
        <div class="flex items-center justify-between">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          >
            Send Message
          </button>
          <a
            href="/"
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            >Back to Home</a
          >
        </div>
      </form>
    </div>
  </body>
</html>
